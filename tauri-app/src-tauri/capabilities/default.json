{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "shell:default",
    "shell:allow-open",
    "dialog:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "/Users/**"
        }
      ]
    }
  ]
}